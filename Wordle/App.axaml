<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Wordle"
             x:Class="Wordle.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://Wordle/Dark.axaml" />
        <StyleInclude Source="avares://Wordle/Views/Controls/KeyboardLetterButton.axaml" />
        <StyleInclude Source="avares://Wordle/Views/Controls/Letter.axaml" />
    </Application.Styles>
</Application>
